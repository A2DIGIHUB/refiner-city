---
const navigation = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Ministries', href: '/ministries' },
  { name: 'Sermons', href: '/sermons' },
  { name: 'Events', href: '/events' },
  { name: 'Give', href: '/give' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="flex w-full items-center justify-between py-4">
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <span class="text-2xl font-bold text-primary-800">Refiners City</span>
        </a>
      </div>
      <div class="hidden ml-10 space-x-1 lg:flex">
        {
          navigation.map((link) => (
            <a 
              href={link.href} 
              class="px-4 py-2 rounded-md text-base font-medium text-primary-700 hover:text-primary-900 hover:bg-primary-100 transition-all duration-200"
              aria-current={Astro.url.pathname === link.href ? "page" : undefined}
            >
              {link.name}
            </a>
          ))
        }
      </div>
      <div class="ml-10 space-x-4 hidden lg:block">
        <a
          href="/new-here"
          class="inline-block bg-primary-600 py-2 px-6 border border-transparent rounded-md text-base font-medium text-white hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-200 shadow-md hover:shadow-lg"
        >
          I'm New Here
        </a>
      </div>
      <!-- Mobile menu button -->
      <div class="lg:hidden flex items-center">
        <button 
          type="button" 
          class="inline-flex items-center justify-center rounded-md p-2 text-primary-700 hover:text-primary-900 hover:bg-primary-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500 transition-all duration-200"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    <!-- Mobile menu -->
    <div class="lg:hidden py-4 hidden">
      <div class="space-y-1 px-2 pt-2 pb-3">
        {
          navigation.map((link) => (
            <a 
              href={link.href} 
              class="block rounded-md px-3 py-2 text-base font-medium text-primary-700 hover:text-primary-900 hover:bg-primary-50"
              aria-current={Astro.url.pathname === link.href ? "page" : undefined}
            >
              {link.name}
            </a>
          ))
        }
        <a
          href="/new-here"
          class="block rounded-md px-3 py-2 text-base font-medium text-white bg-primary-600 hover:bg-primary-700 mt-4"
        >
          I'm New Here
        </a>
      </div>
    </div>
  </nav>
</header>
